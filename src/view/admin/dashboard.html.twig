{% extends "admin/base.html.twig" %}

{# code security : only admin can access in this page #}
{% block title %} Dashboard {% endblock %}

{% block content %}

    <!-- section -->
    <section class="page-section portfolio " id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Ajout d'un article</h2>
            
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                {% if errorMessage is defined %}
                    <div class="alert alert-danger" role="alert">
                        {{ errorMessage }}
                    </div>
                {% endif %}

                {% if successMessage is defined %}
                    <div class="alert alert-success" role="alert">
                        {{ successMessage }}
                    </div>
                {% endif %}

                <form name="add_post" method="post" action="index.php?add-post" accept-charset="UTF-8" enctype="multipart/form-data">
                
                    <div class="mb-3 row">
                        <label for="title" class="col-sm-2 col-form-label">Titre</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" name="title" required="required">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="content" class="col-sm-2 col-form-label">Contenu</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="content" name="content" required="required">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="chapo" class="col-sm-2 col-form-label">Chapô</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="chapo" name="chapo" required="required">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="media" class="form-label">Média</label>
                        <input class="form-control form-control-sm" id="media" type="file" name="media" required="required">
                    </div>
                    <div class="mb-3 row">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isPublished" id="isPublished">
                            <label class="form-check-label" for="isPublished">
                                Publié ?
                            </label>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <select name="userId" class="form-select" aria-label="Default select example">
                            {% for admin in admins %} 
                                <option selected value="{{ admin.id }}">{{admin.pseudo}}</option>
                            {% endfor %}
                        </select>
                    </div>
                
                    <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Ajouter</button>
                </form>
            </div>
        </div>
    </section>

    <section class="page-section portfolio">
        <div class="container">
            <!-- Portfolio Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Commentaires en attente</h2>
            
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        </div>
    <!-- commentaires en attente -->
    <table class="table container-sm">
    <thead>
            <tr>
                <th scope="col">Titre article</th>
                <th scope="col">commentaire</th>
                <th scope="col">Date envoi</th>            
                <th scope="col">Publieur</th>
                <th scope="col">E-mail</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
           <tr>
                <td>{{ commentaire.title }}</td>
                <td>{{ commentaire.content }}</td>
                <td>{{ commentaire.createdAt }}</td>
                <td>{{ commentaire.pseudo }}</td>
                <td>{{ commentaire.email }}</td>
                    <td>
                        <form name="valid_comment" action="index.php?validComment" method="post">
                            <div class="form-check">
                            <input type="hidden" name="idComment" value="{{ commentaire.id }}" id="checkValidComment">
                                <label class="form-check-label" for="checkValidComment">
                                    <button type="submit">Valider</button>
                                </label>
                            </div>
                        </form>
                    </td>
                    <td>
                        <form name="delete_comment" action="index.php?deleteComment" method="post">
                            <div class="form-check">
                            <input type="hidden" name="idComment" value="{{ commentaire.id }}" id="checkDeleteComment" >
                                <label class="form-check-label" for="checkDeleteComment">
                                    <button type="submit">Supprimer</button>
                                </label>
                            </div>
                        </form>
                    </td>
                </div>
            </tr> 
        {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
