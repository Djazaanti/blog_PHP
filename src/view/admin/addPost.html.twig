{% extends "admin/base.html.twig" %}

{# code security : only admin can access in this page #}
{% block title %} Dashboard {% endblock %}

{% block content %}

    <!-- section -->
    <section class="page-section portfolio " id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Ajout d'un article</h2>
            
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                {% if session.ErrorMessage != "" %}
                    <div class="alert alert-danger" role="alert">
                        {{ session.ErrorMessage }}
                    </div>
                {% endif %}

                {% if session.SuccessMessage != "" %}
                    <div class="alert alert-success" role="alert">
                        {{ session.SuccessMessage}}
                    </div>
                {% endif %}

                <form method="post" action="" accept-charset="UTF-8" enctype="multipart/form-data">
                    <input type="hidden" name="action" value="addPost" id="addPost">
                    <div class="mb-3 row">
                        <label for="title" class="col-sm-2 col-form-label">Titre</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" name="title" required="required">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="chapo" class="col-sm-2 col-form-label">Chapô</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="chapo" name="chapo" required="required">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="content" class="col-sm-2 col-form-label">Contenu</label>
                        <div class="col-sm-10">
                        <textarea class="form-control" id="content" name="content" required="required" rows="5" ></textarea>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="media" class="form-label">Média</label>
                        <input class="form-control form-control-sm" id="media" type="file" name="media" required="required">
                    </div>
                    <div class="mb-3 row">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isPublished" id="isPublished">
                            <label class="form-check-label" for="isPublished">
                                Publié ?
                            </label>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <select name="userId" class="form-select" aria-label="Default select example">
                            {% for admin in admins %} 
                                <option selected value="{{ admin.id }}">{{admin.pseudo}}</option>
                            {% endfor %}
                        </select>
                    </div>
                
                    <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Ajouter</button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
