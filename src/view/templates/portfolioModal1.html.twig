<!-- Portfolio Modal 1-->

<div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" aria-labelledby="portfolioModal1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
            <div class="modal-body text-center pb-5">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                        {# {% if postinfos is not null %}
                        {% for post in postinfos %} #}
                    
                        <!-- Portfolio Modal - Title-->
                            {# il faudra récupérer l'id du post via portfolioSection #}
                            
                            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">titre de l'article {{ post.title }}</h2>
                            <h2> Coucou </h2>
                            {{ dump({{infos}}) }}
                            <!-- Icon Divider-->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                <div class="divider-custom-line"></div>
                            </div>
                            <!-- Portfolio Modal - Image-->
                            <img class="img-fluid rounded mb-5" src="public/assets/img/portfolio/{{post.media}}" alt="..." />
                            <!-- Portfolio Modal - Text-->
                            <p class="mb-4">affichage de l'article {{ post.id }}</p>
                            <button class="btn btn-primary" href="#!" data-bs-dismiss="modal">
                                <i class="fas fa-times fa-fw"></i>
                                Close Window
                            </button>
                            {# {% endfor %}
                            {% endif %} #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
