{% extends "base.html.twig" %}

{# code security : only admin can access in this page #}
{% block title %} commentaire{% endblock %}

{% block content %}
{# TODO Activer la ligne ci-dessosu après le traitement de connexion utilisateurs #}
{# {% if userSession is defined %} #}
    <!-- section -->
    <section class="page-section portfolio " id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Envoyer un commentaire</h2>
            
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                {% if errorMessage is defined %}
                    <div class="alert alert-danger" role="alert">
                        {{ errorMessage }}
                    </div>
                {% endif %}

                {% if successMessage is defined %}
                    <div class="alert alert-success" role="alert">
                        {{ successMessage }}
                    </div>
                {% endif %}

                <form name="add_comment" method="post" action="index.php?add-comment/{{ idOfPost }}" accept-charset="UTF-8">
                
                    <div class="mb-3 row">
                        <label for="comment" class="col-sm-2 col-form-label">Commentaire</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="comment" name="comment" required="required">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <select hidden="hidden" name="userId" class="form-select" aria-label="Default select example" >
                        {# TODO : récupérer le nom de l'utilisateur connecté  #}                            
                            <option selected value="{{ user.id }}" selected>{{user.pseudo}}</option>
                        </select>
                    </div>
                
                    <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Envoyer</button>
                </form>
            </div>
        </div>
    </section>
